    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <style>
        html, body {
            font-family: "Nunito Sans", sans-serif;
            background-color: #F1F3FE;
        }

            html a {
                text-decoration: none !important;
            }

        h2 {
            text-transform: uppercase;
            font-weight: 800;
            color: #414142;
        }

        html .nav_link:hover {
            background-color: #F8FAFC;
        }

        html .nav_link {
            padding: 10px;
        }

        .nav-list > * {
            margin-left: 15px;
        }

        .nav-list {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            margin: 0 auto;
        }

            .nav-list p i {
                margin-right: 15px;
            }

            .nav-list p:nth-child(1) {
                width: 250px;
                height: 100px;
                border-radius: 13px;
                color: white;
                background-image: linear-gradient(0deg, #0093E9 20%, #80D0C7 100%);
                border: 1px solid #F1F3FE;
            }

            .nav-list p:hover {
                transform: scale(1.1)
            }

            .nav-list p:nth-child(2) {
                width: 250px;
                height: 100px;
                border-radius: 13px;
                color: white;
                background-image: linear-gradient(135deg, #8BC6EC 0%, #9599E2 100%);
                border: 1px solid #F1F3FE;
            }

            .nav-list p:nth-child(3) {
                width: 250px;
                height: 100px;
                border-radius: 13px;
                color: white;
                background-image: linear-gradient(62deg, #FBAB7E 0%, #F7CE68 100%);
                border: 1px solid #F1F3FE;
            }

            .nav-list a {
                color: white;
                font-weight: 600;
                text-transform: uppercase;
            }

        .nav_link {
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

            .nav_link:hover {
                box-shadow: 1px 10px 72px 0px rgba(0,147,233,0.34);
            }

        .card-title, .card-main {
            margin-top: 30px;
            border-radius: 25px;
            background-color: #ffffff;
            padding: 50px 0;
            border: 1px solid #F1F3FE;
        }

        .card-main {
            padding: 0;
        }
    </style>
    @RenderSection("scripts", required: false)




</head>
<body>


    <div class="container" style="max-width:1400px;margin-top:80px">

        <div class="row">

            <div class="col-lg-12">

                <div class="card-title">
                    <div class="container">
                        <h4 style="text-align:center;font-weight:600;">QUẢN LÝ KHÁCH HÀNG (ADMIN PANEL)</h4>
                        <p style="margin-top:50px;text-align:center;"><img src="~/Content/3.png" class="w3-circle" style="height:106px;width:106px" alt="Avatar"></p>
                        <hr>

                    </div>
                </div>
                <br>

                <div class="nav-list">

                    <p class="nav_link"><i class="fa fa-pencil"></i><a href=""></a>@Html.ActionLink("Đơn Mua", "Index", "DonMuas")</p>
                    <p class="nav_link"><i class="fa fa-home"></i> @Html.ActionLink("Khách Hàng", "Index", "KhachHangs")</p>
                    <p class="nav_link"><i class="fa fa-birthday-cake "></i> @Html.ActionLink("Loại Khách Hàng", "Index", "LoaiKHs")</p>
                </div>
            </div>

            <!-- Middle Column -->
            <div class=" col-lg-12">

                <div class="row">
                    <div style="width:100%;">
                        <div class="card-main">
                            <div style="min-height:900px;padding:15px;">
                                @RenderBody()


                            </div>
                        </div>
                    </div>
                </div>




            </div>


        </div>

    </div>


    <br>





    <script>
        // Accordion
        function myFunction(id) {
            var x = document.getElementById(id);
            if (x.className.indexOf("w3-show") == -1) {
                x.className += " w3-show";
                x.previousElementSibling.className += " w3-theme-d1";
            } else {
                x.className = x.className.replace("w3-show", "");
                x.previousElementSibling.className =
                    x.previousElementSibling.className.replace(" w3-theme-d1", "");
            }
        }

        // Used to toggle the menu on smaller screens when clicking on the menu button
        function openNav() {
            var x = document.getElementById("navDemo");
            if (x.className.indexOf("w3-show") == -1) {
                x.className += " w3-show";
            } else {
                x.className = x.className.replace(" w3-show", "");
            }
        }
        function openPage(pageName, elmnt) {
            // Hide all elements with class="tabcontent" by default */
            var i, tabcontent, menu__links;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }

            // Remove the background color of all tablinks/buttons
            menu__items = document.getElementsByClassName("menu__item");
            for (i = 0; i < menu__items.length; i++) {
                menu__items[i].style.backgroundColor = "";
            }

            // Show the specific tab content
            document.getElementById(pageName).style.display = "block";

